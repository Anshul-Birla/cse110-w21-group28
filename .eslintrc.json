{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "import/prefer-default-export":"off",
        "no-param-reassign":"off",
        "import/extensions":"off",
        "ignoreComments": "off", 
        "no-new":"warn",
        "class-methods-use-this":"off"
    },
    "overrides":[
        {
            "files": ["*.test.js"],
            "rules": {
                "no-undef":"off",
                "no-unused-vars":"off"
            }
        }
    ],
    "ignorePatterns": ["docs/*"]
}
